{
  "version": 2,

  "outputDirectory": "frontend/dist",
  "buildCommand": "npm run build",

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|eot|ttf|ico)$",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
